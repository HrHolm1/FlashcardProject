<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flashcardproject.CreateDeckController">
    <Label style="-fx-font-size: 18px;" text="Create a New Deck" />
    <TextField fx:id="deckNameField" maxWidth="400.0" promptText="Deck Name" />
    <TextField fx:id="questionField" maxWidth="400.0" promptText="Question" />
    <TextField fx:id="answerField" maxWidth="400.0" promptText="Answer" />
    <TextField fx:id="topicField" maxWidth="400.0" promptText="Topic" />
    <Button onAction="#handleChooseImage" text="Choose Image" />
    <Label fx:id="imagePathLabel" text="No image selected" />
    <Button onAction="#handleAddFlashcard" text="Add Flashcard" />
    <Button onAction="#handleSaveDeck" text="Save Deck" />
</VBox>
